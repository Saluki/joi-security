{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "ES2021",
    "module": "CommonJS",
    "strict": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "sandbox"
  ]
}
